{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-3xl font-bold text-slate-600">Mot de passe oublié</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre email et nous vous enverrons un lien pour le modifier.
            </small>
        </div>

        <button class="bg-green-700 hover:bg-green-800 focus:ring-green-300 text-white focus:ring-4 font-medium rounded-md text-sm px-5 py-2.5 focus:outline-none">Envoyer</button>
    {{ form_end(requestForm) }}
{% endblock %}
