{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <div class="flex flex-col gap-5">
        <h1 class="text-3xl font-bold text-slate-600">Se connecter</h1>
        <div class="flex flex-col">
            <label for="inputUsername" class="block mb-2 mr-2 text-sm font-medium text-slate-600 dark:text-gray-300">Nom</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="username" required autofocus>
        </div>
        <div class="flex flex-col">
            <label for="inputPassword" class="block mb-2 mr-2 text-sm font-medium text-slate-600 dark:text-gray-300">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
        <div class="flex items-center gap-8">
            <button class="bg-green-700 hover:bg-green-800 focus:ring-green-300 text-white focus:ring-4 font-medium rounded-md text-sm px-5 py-2.5 focus:outline-none" type="submit">
                Se connecter
            </button>
            <a href="/reset-password" class="text-slate-400 hover:text-slate-900">Mot de passe oublié ? </a>
        </div>
        <div class="text-slate-600">
           Pas de compte ? <a href="/register" class="text-slate-400 hover:text-slate-900">S'enregistrer</a>
        </div>
    </div>
</form>
{% endblock %}
