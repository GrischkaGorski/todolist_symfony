{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold text-slate-600">Cr√©er un compte</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {label: 'Nom'}) }}
        {{ form_row(registrationForm.email, {label: 'Email'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}

        <button type="submit" class="bg-green-700 hover:bg-green-800 focus:ring-green-300 text-white focus:ring-4 font-medium rounded-md text-sm px-5 py-2.5 focus:outline-none">Valider</button>
    {{ form_end(registrationForm) }}
{% endblock %}
